<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_groups"
    android:layout_marginBottom="50dp"
    android:background="#e9f0fc"
    tools:context=".screens.fragments.GroupsFragment">

    <include
        layout="@layout/group_fragment_toolbar" />

    <ExpandableListView
        android:id="@+id/elv_groupFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:dividerHeight="1dp">
    </ExpandableListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/groupFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/white"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>