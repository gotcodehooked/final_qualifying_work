<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="1dp">

        <selector >
            <item android:state_enabled="true"
                android:state_focused="true">
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="#8AA3B5"/>
                </shape>
            </item>

            <item android:state_enabled="true" >
                <shape
                    android:padding="2dp"
                    android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/dark_blue"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>