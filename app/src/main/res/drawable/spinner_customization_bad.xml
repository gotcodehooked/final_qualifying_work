<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list android:layout_width="wrap_content" android:layout_height="wrap_content">

            <item>

                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#FF8A80" />
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
